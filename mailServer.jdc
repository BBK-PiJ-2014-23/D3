boolean finished = false;

while (!finished) {
	print(">>> ");
	String str = System.console().readLine();
	
	if (str.equals("QUIT")) {
		finished = true;
	} else if (str.length() > 10 && str.substring(0, 11).equals("MAIL FROM: ")) {
		String email = str.substring(11, str.length());
		println(email);
	} else {
		;
	}
}

